{
  "name": "praxis-core",
  "version": "0.0.1",
  "scripts": {
    "start": "ts-node --project ./tsconfig.src.json src/main.ts",
    "start:dev": "nodemon --config ./nodemon.json",
    "start:client": "vite --host",
    "build": "tsc -b && eslint src --ext ts && tsc --project ./tsconfig.src.json",
    "build:client": "tsc -b && eslint view --ext ts,tsx && vite build --emptyOutDir true",
    "typeorm": "ts-node --project ./tsconfig.src.json ./node_modules/typeorm/cli.js",
    "typeorm:gen": "npm run typeorm migration:generate -- -p -d ./src/database/data-source.ts",
    "typeorm:run": "npm run typeorm migration:run -- -d ./src/database/data-source.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "types": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-avatar": "^1.1.7",
    "@radix-ui/react-checkbox": "^1.2.2",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.62.11",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "axios": "^1.7.8",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.0.2",
    "chroma-js": "^3.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "color-hash": "^2.0.2",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "i18next": "^21.6.7",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "next-themes": "^0.4.6",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.60.0",
    "react-i18next": "^11.15.3",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.0.1",
    "react-use-websocket": "^4.10.0",
    "redis": "^4.7.0",
    "sanitize-html": "^2.14.0",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typeorm": "^0.3.14",
